{
  "manifest_version": 3,
  "name": "Github Status",
  "version": "1.0",
  "description": "Add status indicator to the top of github.com.",
  "icons": {
    "16": "images/16x16.png",
    "32": "images/32x32.png",
    "48": "images/48x48.png",
    "128": "images/128x128.png"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "matches": [
        "https://github.com/*",
        "https://github.com/*"
      ]
    }
  ]
}